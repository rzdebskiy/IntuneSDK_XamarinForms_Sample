<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IntuneSDKXFSample"
             x:Class="IntuneSDKXFSample.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
                ios:Page.UseSafeArea="true"
             >
    <StackLayout Orientation="Vertical"  >
        <Label Text="Intune SDK Policies Sample App v1.0" HorizontalOptions="Center" VerticalOptions="Start" HeightRequest="100" />
        <Label Text="Confidential Information" HorizontalOptions="Center" />
        <Entry x:Name="txtEntry" Text="Very Sensitive Data" HorizontalOptions="Center" />
        <Label Text="User to enroll:" HorizontalOptions="Center" />
        <Entry x:Name="txtUser" Text="0x3CInsert user alias/email>>" HorizontalOptions="Center" />
        <Button x:Name="btnEnroll" Clicked="btnEnroll_Clicked" Text="Login and Enroll (iOS)" />
    </StackLayout>

</ContentPage>
